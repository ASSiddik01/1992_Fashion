@import url('https://fonts.googleapis.com/css?family=Lato:300,300i,400,400i,700,700i,900|Playfair+Display:400,400i,700,700i,900,900i&display=swap');

body {
    font-family: 'Lato', sans-serif;
}

img {
    max-width: 100%;
    height: auto;
}
input:focus, button:focus, textarea:focus, a:focus {outline: none}
h1,
h2,
h3,
h4,
h5,
h6 {
    margin: 0 0 15px;
    font-weight: 400;
    font-family: 'Playfair Display', serif;
}
p:last-child {margin-bottom: 0}

a:hover { text-decoration: none }
a:focus { outline: 0 solid; text-decoration: none}
a{
    text-decoration: none;
}

.header_top_area {
    font-size: 12px;
    color: #949494;
    border-bottom: 1px solid #ddd;
    padding: 5px 0;
}

.header_top_area a {
    color: #949494;
}

.user_menu a {
    padding-left: 15px;
}

.mainmenu ul {
    margin: 0;
    padding: 0;
    list-style: none;
    text-align: center;
}

.mainmenu li {
    display: inline-block;
    position: relative;
}

.mainmenu li a {
    color: #010101;
    display: block;
    text-transform: uppercase;
    font-weight: 600;
}

.mainmenu li ul {
    position: absolute;
}

.mainmenu li ul {
    box-shadow: 0 0 5px #ddd;
    width: 250px;
    opacity: 0;
    visibility: hidden;
    transition: .3s;
    background-color: #fff;
}

.mainmenu li a {
    padding: 15px;
}

.mainmenu li ul li {
    display: block;
    text-align: left;
}

.mainmenu li:hover ul {
    opacity: 1;
    visibility: visible;
}

a.cart_icon {
    color: #333;
    position: relative;
    padding-left: 10px;
}

span.cart_count {
    position: absolute;
    top: 0;
    background: #CE272A;
    color: #fff;
    font-size: 8px;
    padding: 0 4px;
    right: -8px;
    border-radius: 50%;
}

.logo img {
    max-height: 60px;
}

.main_header {
    padding: 10px 0;
}

.cta-content-bg {
    position: absolute;
    right: 0;
    top: 0;
    width: 85%;
    height: 100%;
    background-size: cover;
    background-position: center;
    background-color: #CBCBCB;
    z-index: 1;
}

.left-v-cta-content {
    position: relative;
}

.cta-content-text {
    padding-top: 250px;
    position: relative;
    z-index: 2;
    padding-bottom: 50px;
    max-width: 300px;
}

.cta-content-text h2 {
    font-size: 70px;
}

.cta-content-bg:after {
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    width: 100%;
    content: "";
    background: #fff;
    z-index: -1;
    opacity: .2;
}

.cta-content-text a {
    color: #CE272A;
}

.cta-content-innter {
    margin-bottom: 15px;
}

.cta-right-video {
    padding-left: 10%;
}

.cta-right-video h3 {
    font-family: inherit;
    font-size: 20px;
    font-weight: 700;
    text-transform: uppercase;
    margin-bottom: 5px;
    margin-top: 20px;
}
.site_header {
 position: relative;z-index: 999;
}

.product-bg {
    height: 320px;
    background-size: cover;
    background-position: center;
}

.single-product-item {
    margin-bottom: 30px;
    text-align: center;
}

.slick-arrow {
    height: 60px;
    width: 60px;
    position: absolute;
    left: -5px;
    background: #000;
    z-index: 9;
    text-align: center;
    color: #fff;
    line-height: 60px;
    top: 50%;
    margin-top: -30px;
}

i.fa.fa-angle-right.slick-arrow {
    left: auto;
    right: -5px;
}

.single-slide-item .row {
    height: 600px;
}

.single-slide-item {
    background-size: cover;
    background-position: center;
    color: #fff;
    text-align: center;
    position: relative;
    z-index: 2;
}

.single-slide-item:after {
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    width: 100%;
    content: "";
    background: #000;
    z-index: -1;
    opacity: .4;
}

.single-slide-item h2 {
    font-size: 100px;
    max-width: 500px;
    margin: 0 auto;
}

.slide-bottom-text {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 20px;
}

.slide-bottom-text p {
    margin-bottom: 10px;
}

.slide-bottom-text strong {
    font-size: 125%;
}

.listing-header {
    text-align: center;
    margin-bottom: 40px;
    font-family: 'Playfair Display', serif;
    font-style: italic;
}

.listing-header h2 {
    font-family: 'Lato', sans-serif;
    margin-bottom: 10px;
    text-transform: uppercase;
    font-size: 25px;
    font-weight: 600;
}

.listing-header {
    text-align: center;
    margin-bottom: 40px;
    font-family: 'Playfair Display', serif;
    font-style: italic;
}

.listing-header h2 {
    font-family: 'Lato', sans-serif;
    margin-bottom: 10px;
    text-transform: uppercase;
    font-size: 25px;
    font-weight: 600;
}

.single-product-item a {
    color: #000;
}

.single-product-item h3 {
    font-size: 16px;
    margin-bottom: 7px;
    font-family: inherit;
    margin-top: 15px;
    text-transform: uppercase;
    font-weight: 600;
}

.product-price {
    font-size: 80%;
    color: #959595;
}

.video-position-left .cta-right-video {
    padding-left: 0;
    padding-right: 10%;
}

.product-carousel .single-carousel-item {
    margin-left: 20px;
}

.product-carousel .slick-list {
    margin-left: -20px;
}

.product-carousel ul.slick-dots button {
    display: none;
}

.product-carousel ul.slick-dots li {
    display: inline-block;
    height: 5px;
    width: 5px;
    background: #b2b2b2;
    border-radius: 50%;
    margin: 4px;
    cursor: pointer;
}

.product-carousel ul.slick-dots {
    margin: 0;
    padding: 0;
    list-style: none;
    text-align: center;
    margin-bottom: 30px;
    margin-top: -10px;
}

.product-carousel ul.slick-dots li.slick-active {
    background-color: #000;
}

.newsletter-block {
    min-width: 700px;
    background: #cccccc;
    padding: 50px;
}

input[type=submit] {
    background: #cf2226;
    color: #fff;
    padding: 15px 20px;
}

input[type=text], input[type=email], input[type=tel], input[type=password], textarea {
    padding: 10px;
    border: 1px solid #ddd;
}

.newsletter-block input[type=email] {
    border: none;
    padding: 15px;
    width: 430px;
}

.info-text {
    font-style: italic;
    font-size: 90%;
    margin-top: 23px;
    max-width: 400px;
}

.newsletter-form {
    margin-top: 30px;
}

.newsletter-block h2 {
    font-size: 50px;
}

.footer-bottom {
    margin-top: 40px;
}

.footer-bottom a {
    color: #000;
}

a.footer-logo {
    font-size: 30px;
    font-weight: 700;
}

.footer-bottom ul {
    display: inline-block;
    margin: 0;
    padding: 0;
    list-style: none;
}

.footer-bottom li {
    display: inline-block;
    padding-left: 25px;
}

.footer-bottom li a {
    display: block;
}

span.scroll-to-up {
    height: 60px;
    width: 60px;
    display: block;
    background: #000;
    color: #fff;
    margin: 0 auto;
    line-height: 60px;
    cursor: pointer;
}

.text-cta {position: relative;}

.text-cta .cta-content-bg {
    width: 100%;
    height: 68%;
}

.text-cta h2 {
    line-height: 1;
}

.text-cta .cta-content-text {
    text-align: center;
    margin: 0 auto;
}

.single-boxed-info {
    text-align: center;
    font-family: 'Playfair Display', serif;
    font-style: italic;
}

.single-boxed-info h3 {
    text-transform: uppercase;
    font-weight: 600;
    font-family: 'Lato', sans-serif;
    font-size: 22px;
    font-style: normal;
}

.single-boxed-info a {
    font-family: 'Lato', sans-serif;
    font-style: normal;
    font-size: 90%;
}


.single-product-wrapper {
    padding: 60px 0;
}

.backto-homepage {
    margin-bottom: 60px;
}

.backto-homepage a {
    font-size: 90%;
    color: #959595;
}

.top-product-images img {
    width: 100%;
}

.top-product-images a {
    position: relative;
    display: block;
    z-index: 2;
}

.top-product-images a i.fa {
    position: absolute;
    left: 50%;
    top: 50%;
    height: 60px;
    width: 60px;
    background: #8e8e8e;
    color: #fff;
    text-align: center;
    line-height: 60px;
    margin-top: -30px;
    margin-left: -30px;
    border-radius: 50%;
    opacity: 0;
}

.top-product-images a:after {
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    width: 100%;
    content: "";
    background: #000;
    z-index: 1;
    transition: .3s;
    opacity: 0;
    visibility: hidden;
}

.top-product-images a:hover:after {
    opacity: .2;
    z-index: 2;
    visibility: visible;
}

.top-product-images a:hover i.fa {
    opacity: 1;
    visibility: visible;
    z-index: 3;
}

.slide-thumbnail {
    height: 120px;
    margin-left: 30px;
}

.bottom-product-thumbnails .slick-list {margin-left: -30px;}

.bottom-product-thumbnails {
    padding: 0 5%;
    margin-top: 30px;
}

.bottom-product-thumbnails .slick-arrow {
    width: 20px;
}

.product-purchase input[type=number] {
    border: 1px solid #ddd;
    text-align: center;
    width: 70px;
}

.product-purchase select, .product-purchase input[type=number], .product-purchase button[type=submit] {
    height: 60px;
}

.product-purchase button[type=submit] {
    background: #252525;
    color: #fff;
    padding: 15px;
    text-transform: uppercase;
    font-weight: 700;
    border: none;
}

.product-purchase {
    margin-top: 30px;
}
.slide-thumbnail {
    background-size: cover;
    background-position: center;
    background-color: #ddd;
}

.page-wrapper {
    padding: 60px 0;
}

table.cart-table {
    width: 100%;
    border-left: 1px solid #ddd;
    border-top: 1px solid #ddd;
}

table.cart-table th, table.cart-table td {
    border-right: 1px solid #ddd;
    border-bottom: 1px solid #ddd;
    padding: 20px;
}

table.cart-table img {
    max-width: 65px;
}

button[type=submit] {
    background: #000;
    color: #fff;
    border: none;
    padding: 10px 30px;
}